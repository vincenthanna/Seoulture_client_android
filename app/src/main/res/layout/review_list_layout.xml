<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/ratingSummary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/ratingAvgTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:textSize="72sp" />

        <LinearLayout
            android:id="@+id/ratingAvg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/ratingAvgTxt"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/ratingAvgBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:numStars="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingAvgBar"
                android:text="48"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ratingsGraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ratingAvg"
            android:background="#888833">

            <TextView
                android:id="@+id/tvGraph"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="등급에 따른 그래프를 삽입 합니다."
                android:textSize="20sp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/review_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingSummary">

        <ListView android:id="@+id/lv_review"
            android:layout_width="fill_parent"
            android:layout_height="1000dp"/>

    </RelativeLayout>
</RelativeLayout>